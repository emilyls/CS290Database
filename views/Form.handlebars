<style>
  body {
    margin: 5em; 
  }
  header {
    text-align: right;
  }
  .forms {
    width: 100%;
  }
  label {
    display: inline-block;
    width: 100px;
    text-align: right;
  }
  input {
    width: 200px;
  }
  legend {
    font-weight: bold;
    font-size: 1em;
  }
  input {
    margin-bottom: 1em;
  }
  #button {
    width: 150px;
  }
</style>
<span class="forms">
  <form action="http://52.88.123.171:5000/home" method="post">
    <fieldset>
      <legend>Add a WorkOut</legend>
      <label for="name">Exercise Name:</label>
      <input type="text" name="name" id="name"></br>
      
      <label for="reps">Repetitions:</label>
      <input type="number" name="reps" id="reps"> 

      <label for="weight">Weight:</label>
      <input type="number" name="weight" id="weight"> 

      <label for="date">Date:</label>
      <input type="date" name="date" id="date">

      <label for="lbs">Pounds (uncheck for Kilos):</label>
      <input type="checkbox" name="lbs" id="lbs">  
      
      <input id="button" type="submit" id="newWorkOut" value="Submit">
    </fieldset>
  </form>
</span>

{{#if notAdded}}
<script>alert("WorkOut missing information, unable to submit");</script>
{{/if}}

{{#if results}}
<p>results</p>
{{/if}}
